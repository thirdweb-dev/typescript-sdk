{
  "name": "@nftlabs/sdk",
  "version": "1.7.0",
  "description": "The main NFTLabs SDK.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nftlabs/nftlabs-sdk-ts.git"
  },
  "license": "MIT",
  "source": "src/index.ts",
  "main": "lib/sdk.cjs.js",
  "module": "lib/sdk.mjs.js",
  "types": "lib/sdk.d.ts",
  "files": [
    "lib/"
  ],
  "sideEffects": false,
  "targets": {
    "types": false
  },
  "scripts": {
    "build": "parcel build",
    "dev": "parcel watch",
    "format": "prettier src/ --write",
    "prepublishOnly": "yarn lint",
    "lint": "eslint src/",
    "fix": "eslint src/ --fix",
    "generate-types": "tsc --emitDeclarationOnly",
    "generate-abi-types": "rm -rf contract-interfaces/ && typechain --target=ethers-v5 --out-dir=contract-interfaces/ 'src/abi/*.json'",
    "extract-api": "api-extractor run --local",
    "copy-dts": "copyfiles -u 1 \"contract-interfaces/*.d.ts\" temp/types/contract-interfaces/",
    "full-build": "rm -rf lib && rm -rf temp && yarn generate-abi-types && yarn build && yarn generate-types && yarn copy-dts && yarn extract-api",
    "generate-md-docs": "yarn api-documenter markdown -i ./temp -o ./docs",
    "generate-docs": "rm -rf docs && yarn full-build && yarn generate-md-docs"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.4.1",
    "@microsoft/api-documenter": "^7.13.53",
    "@microsoft/api-extractor": "^7.18.10",
    "@parcel/compressor-brotli": "^2.0.0",
    "@parcel/compressor-gzip": "^2.0.0",
    "@parcel/transformer-typescript-types": "^2.0.0",
    "@typechain/ethers-v5": "^7.1.0",
    "@types/node-fetch": "^2",
    "@typescript-eslint/eslint-plugin": "^5.2.0",
    "@typescript-eslint/parser": "^5.2.0",
    "copyfiles": "^2.4.1",
    "eslint": "7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-inclusive-language": "^2.1.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "ethers": "^5.4.7",
    "parcel": "^2.0.0",
    "prettier": "^2.4.1",
    "ts-toolbelt": "^9.6.0",
    "typechain": "^5.1.2",
    "typescript": "^4.4.3"
  },
  "peerDependencies": {
    "ethers": "^5.4.6"
  },
  "dependencies": {
    "@ethersproject/bignumber": "^5.5.0",
    "@ethersproject/bytes": "^5.4.0",
    "@ethersproject/constants": "^5.5.0",
    "@ethersproject/contracts": "^5.5.0",
    "@ethersproject/providers": "^5.5.0",
    "@ethersproject/units": "^5.5.0",
    "form-data": "^4.0.0",
    "node-fetch": "^2",
    "ts-enum-util": "^4.0.2"
  },
  "bugs": {
    "url": "https://github.com/nftlabs/nftlabs-sdk-ts/issues"
  },
  "homepage": "https://github.com/nftlabs/nftlabs-sdk-ts#readme",
  "author": "NFTLabs"
}
